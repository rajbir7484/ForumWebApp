@page
@model RegisterAdminModel
@{
    ViewData["Title"] = "Register New Admin";
}
<div class="text-center">
    <h1 class="display-4 heading-font">Register New Admin</h1>
</div>
<div class="row">
    <div class="card col-md-4 bg-grey  border-0">
        <img class="card-img-top img-fluid" src="~/q3.png" alt="" style="width:100%">
    </div>
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
          
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="button button-primary">Register New Admin</button>
            </div>
        </form>
    </div>
</div>