@model ForumWebApp.Models.Subject

@{
    ViewData["Title"] = "Delete";
}


<div class="text-center">
    <h1 class="display-4 heading-font">Delete Subject Details</h1>
</div>
<hr />
<div class="row">
    <div class="card col-md-4 bg-grey  border-0">
        <img class="card-img-top img-fluid" src="~/q3.png" alt="" style="width:100%">
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubjectName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubjectName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SubjectID" />
            <input type="submit" value="Delete This Subject" class="btn btn-danger" />
        </form>
    </div>
</div>