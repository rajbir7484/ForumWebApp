@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QA-Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap" rel="stylesheet">
    <style>
        .menu-font {
            font-family: 'Roboto', sans-serif;
        }

        .heading-font {
            font-family: 'Ubuntu', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar banner navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" class="img-fluid" style="height:50px;" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Subjects" asp-action="Index">Subjects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Questions" asp-action="Index">Questions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Answers" asp-action="Index">Answers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Suggestions" asp-action="Index">Suggestions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="Identity" asp-page="/Account/RegisterNewAdmin">New Admin</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Home" asp-action="AllQuestions">Questions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Home" asp-action="AskQuestion">Ask A Question?</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Home" asp-action="MyQuestions">My Questions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link menu-font text-dark" asp-area="" asp-controller="Home" asp-action="GiveSuggestions">Give Suggestions</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="banner p-3">
        <div class="container p-3">
            <p class="text-center text-dark">A place to share knowledge and better understand the world</p>
            <p class="text-center text-dark">&copy; Copyright QA-Forum 2021 </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
