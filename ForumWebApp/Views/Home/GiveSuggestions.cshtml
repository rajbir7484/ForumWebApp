@model ForumWebApp.Models.Suggestion

@{
    ViewData["Title"] = "GiveSuggestions";
}

<div class="text-center">
    <h1 class="display-4 heading-font">Submit Your Valuable Suggestions</h1>
</div>
<hr />
<div class="row">
    <div class="card col-md-4 bg-grey  border-0">
        <img class="card-img-top img-fluid" src="~/q1.png" alt="" style="width:100%">
    </div>
    <div class="col-md-8">
        <form asp-action="GiveSuggestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailID" class="control-label"></label>
                <input asp-for="EmailID" class="form-control" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuggestionText" class="control-label"></label>
                <textarea asp-for="SuggestionText" class="form-control"></textarea>
                <span asp-validation-for="SuggestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Your Suggestion" class="button button-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
